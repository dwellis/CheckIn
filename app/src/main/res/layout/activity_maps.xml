<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/maps_button_geofence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:enabled="false"
            android:text="Add Check In"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/maps_long_input"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:inputType="numberDecimal|numberSigned"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/maps_button_geofence"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/maps_lat_input"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:ems="10"
            android:inputType="numberDecimal|numberSigned"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/maps_long_input"
            app:layout_constraintEnd_toEndOf="@+id/maps_long_input"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/maps_lat_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Lat"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/maps_lat_input"
            app:layout_constraintStart_toEndOf="@+id/maps_lat_input" />

        <TextView
            android:id="@+id/maps_long_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Long"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/maps_long_input"
            app:layout_constraintStart_toEndOf="@+id/maps_long_input" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

